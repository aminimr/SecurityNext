{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/webapi-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "logs/webapi-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EcommerceMain;User Id=sa;Password=YourPassword123;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },

  "Plugins": {
    "Path": "./Plugins",
    "AutoDiscover": true,
    "HotReload": false,
    "ScanInterval": 30,
    "AllowedExtensions": [".dll", ".zip"],
    "MaxModuleSizeMB": 100,
    "BackupBeforeUninstall": true
  },

  "Modules": {
    "Authentication": {
      "Enabled": true,
      "SettingsPath": "./Plugins/Authentication/config.json"
    },
    "Inventory": {
      "Enabled": true,
      "SettingsPath": "./Plugins/Inventory/config.json"
    }
  },

  "Security": {
    "Jwt": {
      "Secret": "YourSuperSecretKeyHereAtLeast32CharactersLong",
      "Issuer": "EcommerceAPI",
      "Audience": "EcommerceClient",
      "ExpireMinutes": 1440
    },
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000", "https://admin.ecommerce.com"],
      "AllowCredentials": true
    }
  },

  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  },

  "Swagger": {
    "Enabled": true,
    "Title": "Ecommerce Modular API",
    "Version": "v1",
    "IncludeModules": true,
    "RoutePrefix": "api-docs"
  },

  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health",
    "UIEndpoint": "/health-ui"
  },

  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001",
        "Certificate": {
          "Path": "certificate.pfx",
          "Password": "certPassword"
        }
      }
    }
  }
}