{
  "ModuleDefaults": {
    "DatabaseSchema": "mod_{name}",
    "CachePrefix": "mod_{name}_",
    "ApiPrefix": "/api/{name}",
    "RequireAuthentication": true,
    "AllowAnonymous": false,
    "HealthCheckEnabled": true
  },

  "ModuleSpecific": {
    "Authentication": {
      "RequireEmailVerification": true,
      "PasswordPolicy": {
        "MinLength": 8,
        "RequireUppercase": true,
        "RequireLowercase": true,
        "RequireDigit": true,
        "RequireSpecialChar": true
      },
      "Jwt": {
        "ExpireMinutes": 1440,
        "RefreshTokenExpireDays": 7
      }
    },

    "Inventory": {
      "LowStockThreshold": 10,
      "EnableAutoReorder": true,
      "ReorderQuantity": 50,
      "TrackInventoryChanges": true
    },

    "Payment": {
      "DefaultCurrency": "IRR",
      "AllowedCurrencies": ["IRR", "USD", "EUR"],
      "EnableTestMode": false,
      "PaymentGateways": {
        "Zarinpal": {
          "MerchantId": "",
          "Sandbox": true
        },
        "Mellat": {
          "TerminalId": "",
          "Username": "",
          "Password": ""
        }
      }
    }
  }
}